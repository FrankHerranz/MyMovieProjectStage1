<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_detail_film"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.mymovieproject.DetailFilmActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/movie_poster"
                />
            <TextView
                android:paddingTop="@dimen/topPaddingDetailsFilm"
                android:id="@+id/title_film"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/titleTextSize"
                android:layout_toRightOf="@+id/movie_poster"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textIsSelectable="true"
            />
            <TextView
                android:paddingTop="@dimen/topPaddingDetailsFilm"
                android:id="@+id/release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/infoFilmTextSize"
                android:layout_below="@+id/movie_poster"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
            />
            <TextView
                android:paddingTop="@dimen/topPaddingDetailsFilm"
                android:id="@+id/vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/infoFilmTextSize"
                android:layout_below="@+id/release_date"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
            />
            <TextView
                android:paddingTop="@dimen/topPaddingDetailsFilm"
                android:id="@+id/plot_synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/synopsisTextSize"
                android:gravity="center"
                android:layout_below="@+id/vote_average"
                android:layout_centerHorizontal="true"
            />

        </RelativeLayout>

    </ScrollView>